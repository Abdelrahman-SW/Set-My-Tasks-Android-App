<?xml version="1.0" encoding="utf-8"?>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/NoTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_active_tasks_img"
                android:contentDescription="@string/no_active_tasks" />

            <TextView
                android:id="@+id/NoTaskText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/there_are_no_active_tasks"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/CollapseToolbar"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|enterAlwaysCollapsed"
                android:layout_height="match_parent">
                <TextClock
                    android:layout_gravity="center"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clock"
                    android:textSize="24sp"
                    android:format24Hour="H:mm:s"
                    android:format12Hour="h:mm:s a"
                    android:gravity="center"
                    android:background="@drawable/clockbackground"
                    />
                <androidx.appcompat.widget.Toolbar
                    app:layout_collapseMode="pin"
                    android:id="@+id/myToolbar"
                    android:layout_width="match_parent"
                    android:background="@color/PinkColor"
                    android:layout_height="?attr/actionBarSize">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_tasks"
                        android:textColor="#FFFFFF"
                        android:textSize="23sp"
                        />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layoutAnimation="@anim/layout_animation_recycle_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingEnd="@dimen/PaddingRecycleView"
            android:paddingStart="@dimen/PaddingRecycleView"
            android:paddingTop="@dimen/PaddingRecycleView"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/MyRecyclerView"
            tools:listitem="@layout/itemview"
            android:paddingBottom="70dp"
            tools:context=".UI.MainActivity"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/AddTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="135dp"
            app:srcCompat="@drawable/add"
            android:visibility="gone"
            app:elevation="16dp"
            tools:visibility="visible"
            android:contentDescription="@string/add_task" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="55dp"
            app:srcCompat="@drawable/ic_more"
            app:elevation="16dp"
            android:contentDescription="Add"
            tools:ignore="HardcodedText,RelativeOverlap" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/AddTaskByLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="215dp"
            app:srcCompat="@drawable/ic_location_marker"
            android:visibility="gone"
            app:elevation="16dp"
            tools:visibility="visible"
            android:contentDescription="@string/add_location_task" />

        <ImageView
            android:id="@+id/celebrate1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_confetti"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:contentDescription="congratulations"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/celebrate2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_confetti"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:contentDescription="congratulations"
            tools:ignore="HardcodedText"
            />
        <ImageView
            android:id="@+id/celebrate3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_confetti"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:contentDescription="congratulations"
            tools:ignore="HardcodedText"
            />

    <FrameLayout
        android:id="@+id/adViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
    </FrameLayout>

    </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrawer"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_for_nav"
        android:layout_gravity="start"
        />
    </androidx.drawerlayout.widget.DrawerLayout>